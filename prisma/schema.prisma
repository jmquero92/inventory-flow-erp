// Esto le dice a Prisma que genere el cliente de JavaScript
generator client {
  provider = "prisma-client-js"
}

// Esto configura la conexi√≥n con Supabase
datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// Este es tu modelo de datos (La tabla de Productos)
model Product {
  id        String   @id @default(uuid())
  name      String
  sku       String   @unique
  price     Float
  stock     Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}